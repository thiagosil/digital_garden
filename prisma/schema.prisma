// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediaItem {
  id          String   @id @default(cuid())
  title       String
  mediaType   MediaType
  status      Status   @default(BACKLOG)
  coverImage  String?
  creator     String?  // Author, Director, Developer, etc.
  synopsis    String?
  notes       String?  // User's personal notes/review
  rating      Int?     // Star rating 1-5
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // API-specific IDs for fetching additional data
  apiId       String?  // ID from the external API (TMDB, Google Books, RAWG, etc.)
}

enum MediaType {
  BOOK
  MOVIE
  TV_SHOW
  VIDEO_GAME
}

enum Status {
  BACKLOG
  IN_PROGRESS
  COMPLETED
}
